import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.util.Scanner;
 
public class Main {

	public static void main(String[] args)   {

		// charAt() -> next()로 문자열 입력받아 charAt()으로 첫번째 문자 꺼내오기
		// charAt() -> String타입의 문자열에서 지정된 index에 있는 문자를 char타입으로 변환해준다 
		
		 BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
		 try {
			char word = br.readLine().charAt(0);
			System.out.println("첫번째 문자 : " + word);
		} catch (IOException e) {
			e.printStackTrace();
		}
		 
 
		
		Scanner sc = new Scanner(System.in);
		System.out.print("문자 입력: ");
		
		String s = sc.nextLine();
		char c = s.charAt(0); 
		
		System.out.println("첫 번째 문자 : " + c);
		sc.close();
	
		 // 코드업 자바 1011번 char형 문자 출력 
	 	Scanner sc = new Scanner(System.in);
		
		// 공백 또는 줄바꿈 전까지의 한 단어를 입력받음
		 String c = sc.next();
		//입력받은 단어의 첫 번째 문자
		char s = c.charAt(0);
		System.out.println(s);
		
		 
		 // 코드업 자바 1012번 float형 문자 출력 
		 Scanner sc = new Scanner(System.in);
	 
		 // 입력 값을 float타입으로 저장 
		 float f = sc.nextFloat();
		 System.out.println(String.format("%.6f", f));
 	 
		// 1013번 문제 두 문자 출력 
		 Scanner sc = new Scanner(System.in);
		 int x = sc.nextInt();
		 int y = sc.nextInt();
		 System.out.print(x + " " + y);
		
		// 1014번 문제 순서바뀐 두 문자 출력 
		Scanner sc = new Scanner(System.in);
		String s = sc.nextLine();
		char a =s.charAt(0); // 첫번째 문자 
		// 두번째 문자는 공백으로이뤄짐 
		char b = s.charAt(2); // 세번째 문자 
		System.out.println(b+" "+ a);
		
		// 1015 : 실수 입력받아 둘째 자리까지 출력 
		Scanner sc = new Scanner(System.in);
		float a = sc.nextFloat();
		System.out.printf("%.2f", a);
		 
		// 1016 : 정수 1개 입력 받아 3번 출력
		Scanner sc = new Scanner(System.in);

		System.out.printf("정수 입력: ");
		int a = sc.nextInt();
		 System.out.printf(a+ " "+ a+" "+a);
		정수 a를 세 번 출력하고, 각 정수 사이에 공백이 포함됩니다. 
		System.out.printf("%d %d %d ", a,a,a);
		 정수를 3번 공백 두고 출력하는 for문 , 
		for(int i =0; i<3; i++)
		{ System.out.print(a);
			if( i < 2) {
				System.out.println(" "); //마지막 숫자 뒤에는 공백을 두지 않음 
			}
		}
	 	 
		// 1018 시간을:로 입력받아 출력하기 
		Scanner sc = new Scanner(System.in);
		String a =sc.next();
		System.out.println(a);
		
		// 1019 날짜를(연,월,일) "." 입력받아 출력하기 
		// 스캐너 객체를 생성하여 표준입력으로 부터 입력 받음
		Scanner sc = new Scanner(System.in);
		// 날짜를 문자열로 입력 받음
		String a = sc.nextLine();
		// 입력받은 문자열을 점을 기준으로 분리하여 배열에 저장한다. 
		String arr[] = a.split("\\.");
		// -> "."은 정규표현식에서 메타문자이기에 \\ 백슬래시 두번 사용하여 이스케이프 처리한다
		// 배열의 각 요소를 정수형으로 변환 
		int y = Integer.valueOf(arr[0]);
		int m = Integer.valueOf(arr[1]);
		int d = Integer.valueOf(arr[2]);
		
		// 변환된 정수형 날짜를 원하는 형식으로 출력 
		System.out.printf("%04d.%02d.%02d", y,m,d);
		
		// 1027 년월일을 일월년으로 바꾸기 
		Scanner sc = new Scanner(System.in);
		// 날짜를 문자열로 입력 받음
		String a = sc.next();
		// 입력받은 문자열을 점을 기준으로 분리하여 배열에 저장한다. 
		String arr[] = a.split("\\.");
		
		int y = Integer.valueOf(arr[0]);
		int m = Integer.valueOf(arr[1]);
		int d = Integer.valueOf(arr[2]);
		System.out.printf("%02d-%02d-%04d", d,m,y);
	}

}
